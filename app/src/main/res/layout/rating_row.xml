<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    android:layout_margin="12dp"
    android:elevation="90dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/one"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Last Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/two"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:text="Rating"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/displayUID"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/displayRating"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/displayRating"
            android:text="ID"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/displayRating"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/displayFeedback"
            android:layout_alignStart="@+id/displayFeedback"
            android:layout_below="@+id/one"
            android:text="Star"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/three"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/two"
            android:text="Feedback"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/displayFeedback"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/two"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/one"
            android:layout_toRightOf="@+id/one"
            android:lines="5"
            android:text="Feed"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/four"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/displayFeedback"
            android:text="Contact"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/displayPhone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/displayFeedback"
            android:layout_alignStart="@+id/displayFeedback"
            android:layout_below="@+id/displayFeedback"
            android:text="Phone"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/five"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/four"
            android:text="Date"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/displayDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/displayUID"
            android:layout_alignStart="@+id/displayUID"
            android:layout_below="@+id/four"
            android:text="Date"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/six"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/five"
            android:text="Reg No"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/displayReg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/displayUID"
            android:layout_below="@+id/five"
            android:text="Reg"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/displayUID" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
