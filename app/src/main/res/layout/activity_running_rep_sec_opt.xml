<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayur.pdm.RunningRep_sec_opt">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tirerep"
            app:srcCompat="@drawable/tirerep" />

        <Button
            android:id="@+id/btn10"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Wheel Alignment"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:text="GENERAL RUNNING REPAIR"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:text="AUTO TRANSMISSION FLUID TRANSMISSION"
            android:textColor="@color/green"
            android:textSize="20sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
