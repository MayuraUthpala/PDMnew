<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.mayur.pdm.Fuel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#795548"
            android:padding="4dp"
            android:stretchColumns="1">

            <TableRow>
                <TextView />


                <TextView
                    android:id="@+id/txfuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Fuel"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/txs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Save"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/White"
        android:layout_height="0dp"
        android:layout_weight="7">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:id="@+id/id_dat"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvdate"

                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Select Date"
                    android:textColor="@color/black"
                    android:textSize="18dp" />


            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/id_odo"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Mileage"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/id_eo"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:hint="Distance Traveled"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Km"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/id_kil"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Km(perLitre)"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/id_ekil"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:hint="Km per Litre"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Km"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </TableRow>


            <TableRow>

                   <Button
                    android:id="@+id/id_qty"
                    android:layout_height="match_parent"
                    android:layout_width="20dp"
                    android:layout_gravity="left"
                    android:background="@color/nnn"
                    android:gravity="center"
                    android:text="Quantity"
                    android:textColor="@color/white"
                    android:textSize="16dp" />


             <!--   <Button
                    android:id="@+id/id_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/nia"
                    android:gravity="center_vertical"
                    android:text="Quantity"
                    android:textColor="@color/ni"
                    android:textSize="16dp" />
                    -->
                <EditText
                    android:id="@+id/edit2"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:hint="Amount of Litres Consumed"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Ltr"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/id_pri"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edit3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="Price of a Litre"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Rs"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>


            <TableRow>

                <Button
                    android:id="@+id/id_cos"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="@color/nnn"
                    android:gravity="center"
                    android:text="Cost"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
              <!--  <Button
                    android:id="@+id/id_cos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/nia"
                    android:gravity="center_vertical"
                    android:text="Cost"
                    android:textColor="@color/ni"
                    android:textSize="16dp" />
-->
                <EditText
                    android:id="@+id/edit4"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:hint="Total Cost"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="Rs"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/id_co"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="CO2(per Km)"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edit5"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:hint="CO2 Emission"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="g"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>


            <TableRow>

                <Button
                    android:id="@+id/id_em"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="CO2(Emited)"
                    android:textColor="@color/white"
                    android:background="@color/nnn"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edit6"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:hint="Total CO2 Emission"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="g"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/White"
        android:layout_weight="1.3">

        <android.support.v7.widget.CardView
            android:id="@+id/f2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/nnn"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:stretchColumns="1">

                    <TableRow>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/chart" />

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="STATISTICS"
                            android:textColor="@color/White"
                            android:textSize="40dp" />

                    </TableRow>

                </TableLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>


</LinearLayout>
