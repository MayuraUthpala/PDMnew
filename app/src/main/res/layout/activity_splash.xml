        <ImageView
            android:id="@+id/tv"
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@drawable/real" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
